<div id="container">
    <p id="work" class="label">Work:</p>
    <p id="break" class="label">Break:</p>
    <p id="cycles" class="label">Points:</p>

    <div id="work-timer" class="timer">
        <p id="w_minutes">0</p>
        <p class="semicolon">:</p>
        <p id="w_seconds">10</p>
    </div>
    <div id="break-timer" class="timer">
        <p id="b_minutes">0</p><p class="semicolon">:</p><p id="b_seconds">10</p>
    </div>
    <p id="points" class="timer">0</p>
    <button id="start" type="button" class="btn btn-primary">Start</button>
    <button id="stop" type="button" class="btn btn-primary">Pause</button>
    <button id="reset" type="button" class="btn btn-primary">Reset</button>
